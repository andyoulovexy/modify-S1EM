{
  "name": "Elasticsearch_Hash_Analysis",
  "author": "V1D1AN",
  "license": "AGPL-V3",
  "url": "https://gitlab.cyber.fr",
  "version": "1.0",
  "description": "Search for IoCs in a Elasticsearch Instance",
  "dataTypeList": ["hash"],
  "command": "Elasticsearch/elk.py",
  "config": {
       "service": "hash"
    },
  "baseConfig": "Elasticsearch",
  "configurationItems": [
   {
      "name": "endpoint",
      "description": "Define the Elasticsearch endpoint",
      "type": "string",
      "multi": false,
      "required": false,
      "defaultValue": "https://elastic:kr1TLSfOyWIWkj@es01:9200"
    },
    {
      "name": "index",
      "description": "Define the Elasticsearch index to use",
      "type": "string",
      "multi": true,
      "required": true,
      "defaultValue": [ "filebeat-*","winlogbeat-*","logs-*","auditbeat-*","stoq-*" ]
    },
    {
      "name": "hash",
      "description": "Define the field to query for Hash IoCs",
      "type": "string",
      "multi": true,
      "required": true,
      "defaultValue": [ "file.hash.md5","file.hash.sha1","file.hash.sha256","results.workers.hash.md5","results.workers.hash.sha1","results.workers.hash.sha256" ]
    },
    {
      "name": "verifyssl",
      "description": "Verify SSL certificate",
      "type": "boolean",
      "multi": false,
      "required": true,
      "defaultValue": false
    },
    {
      "name": "cert_path",
      "description": "Path to the CA on the system used to check server certificate",
      "type": "string",
      "multi": true,
      "required": false
    }
  ]
}

